import bit;

local n = 0b0000;
n = bit.and( n, 0b1111 );
# still 0000
print( n );
n = bit.or( n, 0b1111 );
# now 1111 (15)
print( n );
n = bit.xor( n, 0b1100 );
# now 0011 (3)
print( n );
#n = bit.complement( n );
n = 0b1100;
# now 1100 (12)
print( n );
n = bit.shift_left( n, 2 );
# now 110000 (48)
print( n );
n = bit.shift_right( n, 1 );
# now 11000 (24)
print( n );
