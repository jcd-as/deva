# simple insertion sort routine
def isort( v, compare )
{
    for( i in range( 1, length(v) ) )
	{
        local value = v[i];
        local j = i - 1;
        while( true )
		{
			if( compare( v[j], value ) )
			{
                v[j + 1] = v[j];
                j = j - 1;
                if( j < 0 )
					break;
			}
            else
				break;
		}
        v[j + 1] = value;
	}
}

def compare( a, b )
{
	return a > b;
}

v = [ 11, 21, 34, 9, 4, 2, 0, 45 ];
isort( v, compare );
print( v );
