# test file built-ins
#

file = open( "input.dv" );
bytes = readstring( file, 56 );
print( tell( file ) );
print( bytes );

seek( file, 0 );
bytes = readline( file );
while( bytes )
{
	print( bytes, "" );
	bytes = readline( file );
}

seek( file, 0, 0 ); 	# 0 = SEEK_SET
lines = readlines( file );
for( line in lines )
{
	print( line, "" );
}
close( file );

# binary read
file = open( "input.dv" );
bytes = read( file, 56 );
print( tell( file ) );
print( bytes.length() );
print( bytes );
close( file );
