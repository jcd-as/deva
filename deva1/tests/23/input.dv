# bubble sort test

# bubble sort the array 'a'
def bubble_sort( a )
{
	len = length( a );
	swap = true;
	while( swap )
	{
		swap = false;
		i = len-1;
		while( i >= 0 )
		{
			j = 1;
			while( j <= i )
			{
				if( a[j-1] > a[j] )
				{
					temp = a[j-1];
					a[j-1] = a[j];
					a[j] = temp;
					swap = true;
				}
				j = j + 1;
			}
			i = i - 1;
		}
	}
	return a;
}

